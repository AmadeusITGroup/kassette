{
  "compilerOptions": {
    "baseUrl": "./",

    "module": "commonjs",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,

    "target": "es2019",
    "lib": [
      "es2019"
    ],

    "types": [
      "jest",
      "node"
    ]
  }
}
